{{#each data.sections}}
	<div class="row">
	    <div class="col-md-4 hidden-xs pt-large">
	        <h3 class="mb-section-header">{{ title }}
	    		<button class="btn btn-info btn-xs" type="button" data-toggle="collapse" data-target="#pyrCollapse" aria-expanded="false" aria-controls="pyrCollapse">
	            	<span class="glyphicon glyphicon-info-sign" aria-hidden="true"></span>
	            info
	          	</button>
	        </h3>
	        {{> ui/help-block}}        
	        <div class="mb-oxygen mb-section-text">
				{{#each paragraphs}}
					<p>{{this}}</p>
				{{/each}}
	        </div>
	    </div>
	</div>
	<hr>
{{/each}}