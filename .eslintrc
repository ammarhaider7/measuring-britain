{
  "parser": "babel-eslint",
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parserOptions": {
      "ecmaVersion": 6,
      "ecmaFeatures": {
          "jsx": true,
          "experimentalObjectRestSpread": true
      },
      "sourceType": "module"
  },

  "env": {
    "browser": 1,
    "node": 1
  },
 
  "globals": {
    "angular": 1
  },

  "plugins": [
    "import",
    "react",
    "babel"
  ],
 
  "rules": {
    "quotes": [2, "single"],
    "no-undef": "error",
    "no-unused-vars": 1,
    "no-invalid-regexp": 1,
    "no-unreachable": 1,
    "no-mixed-spaces-and-tabs": 1,
    "no-const-assign": 1,
    "no-dupe-class-members": 1,
    "no-global-assign": 1,
    "no-console": 0,
    "import/no-unresolved": 2,
    "import/named": 2,
    "import/namespace": 2,
    "import/default": 2,
    "import/export": 2,
    "no-case-declarations": 0,
    "react/no-render-return-value": 1
  }
}